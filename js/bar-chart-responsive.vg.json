{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "view": {
        "strokeWidth": 0
    },
    "width": "container",
    "height": 340,
    "data": {
        "url": "https://raw.githubusercontent.com/kkho0019/data_visualisation/main/data/year_of_occurrence.csv"
    },
    "mark": "bar",
    "encoding": {
        "y": {
            "aggregate": "sum", 
            "field": "Deaths",
            "stack": "normalize",
            "axis": {
                "title": "Death Population",
                "titleFontSize": 12,
                "titlePadding": 12
            }
        },
        "x": {
            "field": "Year",
            "axis": {
                "title": "Year",
                "titleFontSize": 12,
                "titlePadding": 12,
                "labelAngle": 0
            }
        },
        "color": {
            "field": "Sex",
            "scale": {
                "range": ["#18225c", "#ffa600"]
            }
        },
        "tooltip": [
            {"field": "Sex", "type": "nominal"},
            {"field": "Deaths", "type": "quantitative"}
        ]
    }
}

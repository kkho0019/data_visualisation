{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/kkho0019/data_visualisation/main/data/age_specific_death_rates.csv"
    },
    "width": "container",
    "height": 340,
    "transform": [
        {
            "calculate": "datum.Death_Rate",
            "as": "Deaths per 100,000 population"
        },
        {
            "filter": "datum.Age != '0-14'"
        }
    ],
    "layer": [
        {
            "params": [
                {
                    "name": "age_range_highlight",
                    "select": {
                    "type": "point",
                    "fields": ["Age"]
                    },
                    "bind": "legend"
                }
            ],
            "mark": {
                "type": "line",
                "interpolate": "monotone"
            },
            "encoding": {
                "x": {
                    "field": "Year",
                    "timeUnit": "year",
                    "axis": {
                        "title": "Year",
                        "titleFontSize": 12,
                        "titlePadding": 12
                    }
                },
                "y": {
                    "field": "Death_Rate",
                    "aggregate": "mean",
                    "axis": {
                        "title": "Deaths per 100,000 Population",
                        "titleFontSize": 12,
                        "titlePadding": 12
                    },
                    "scale": {
                        "domainMin": 10,
                        "domainMax": 22
                    }
                },
                "color": {
                    "field": "Age",
                    "type": "nominal",
                    "title": "Age Range"
                },
                "opacity": {
                    "condition": {
                        "param": "age_range_highlight",
                        "value": 1
                    },
                    "value": 0.2
                },
                "tooltip": [
                    {"field": "Age", "type": "nominal", "title": "Age range"},
                    {"field": "Year", "timeUnit": "year", "title": "Year"},
                    {
                        "field": "Deaths per 100,000 population", 
                        "type": "quantitative",
                        "format": ".1f"
                    }
                ]
            }
        }
    ],
    "config": {}
}